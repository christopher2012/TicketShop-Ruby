<h1 class="registration-title">REJESTRACJA</h1>



<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@user, url: signup_path) do |f| %>
        <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

              <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <%= f.label :name, "Nazwa użytkownika" %>
        <%= f.text_field :name, class: 'form-control' %>


        <%= f.label :email, "Email" %>
        <%= f.email_field :email, class: 'form-control' %>


        <div class="field">
          <%= f.label :age, "Data urodzenia" %>
          <%= f.text_field :age, id: :user_age, "data-provide" => 'datepicker', class: 'datepicker form-control' %>
        </div>

        <script type="text/javascript">
            $(document).ready(function(){
                $('.datepicker').datepicker({
                    format: "yyyy-mm-dd"
                });
            });
        </script>

        <%= f.label :password, "Hasło" %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Powtórz hasło" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit "Zarejestruj", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
